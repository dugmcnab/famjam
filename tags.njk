---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
renderData:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---

<div class="centre container with-padding">

  <div class="stack">

    <h1>Tagged “{{ tag }}”</h1>

    {% set postslist = collections[ tag ] %}
    {% include "postslist.njk" %}

    <p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>

  </div>

</div>
